<WatchFace width="450" height="450" shape="CIRCLE">
    <Metadata key="CLOCK_TYPE" value="ANALOG" />
    <Metadata key="TICK_PER_SECOND" value="15" />
    <Metadata key="PREVIEW_TIME" value="2:42:27" />

    <!--
    User configuration for the top-most element of the watch face: the digital display.
    -->
    <UserConfigurations>
        <ListConfiguration id="user_config" displayName="digital_display" defaultValue="0">
            <ListOption id="0" displayName="display_none" icon="icon_empty"/>
            <ListOption id="1" displayName="display_12" icon="icon_12hr"/>
            <ListOption id="2" displayName="display_ampm" icon="icon_ampm"/>
            <ListOption id="3" displayName="display_mil" icon="icon_milit"/>
            <ListOption id="4" displayName="display_24" icon="icon_24hr"/>
            <ListOption id="5" displayName="display_step" icon="icon_steps"/>
            <ListOption id="6" displayName="display_heart" icon="icon_heart"/>
            <ListOption id="7" displayName="display_note" icon="icon_notif"/>
            <ListOption id="8" displayName="display_date" icon="icon_date"/>
        </ListConfiguration>
    </UserConfigurations>


    <!--
        The Scene element is required and must be the root element of the displayed elements.
    -->
    <Scene backgroundColor="#ff000000">
        <Group name="background"
            x="0" y="0" width="450" height="450">
            <PartImage name="background_image"
                x="0" y="0" width="450" height="450"
                tintColor="#c9c9c9"
                alpha="255">
                <Image resource="background" />
                <Variant mode="AMBIENT" target="alpha" value="0" />
            </PartImage>
        </Group>

        <!--
            The index group below contains the watch face index, including the numerals displaying
            hour slots 2, 4, 6, 8, 10 and 12. Currently, slots 2, 4, 8 and 10 open apps as follows:
            2 -> Alarm
            4 -> Music Player
            8 -> Health Heart Rate
            10 -> Calendar

            At a later date, these will be substituted for user-defined shortcuts via use of
            complication slots.
        -->
        <Group name="index"
            x="0" y="0" width="450" height="450">
            <Group name="numerals"
                x="0" y="0" width="450" height="450">
                <PartImage name="numeral_2"
                    x="358" y="115" width="28" height="50"
                    pivotX="0.5" pivotY="0.5"
                    angle="60"
                    tintColor="#d3d3d3"
                    alpha="255">
                    <Image resource="numeral_02" />
                    <Variant mode="AMBIENT" target="alpha" value="120" />
                </PartImage>
                <PartImage name="numeral_4"
                    x="344" y="284" width="56" height="52"
                    pivotX="0.5" pivotY="0.5"
                    angle="300"
                    tintColor="#d3d3d3"
                    alpha="255">
                    <Image resource="numeral_04" />
                    <Variant mode="AMBIENT" target="alpha" value="120" />
                </PartImage>
                <PartImage name="numeral_6"
                    x="192" y="369" width="56" height="52"
                    tintColor="#d3d3d3"
                    alpha="255">
                    <Image resource="numeral_06" />
                    <Variant mode="AMBIENT" target="alpha" value="120" />
                </PartImage>
                <PartImage name="numeral_8"
                    x="30" y="281" width="91" height="52"
                    pivotX="0.5" pivotY="0.5"
                    angle="59"
                    tintColor="#d3d3d3"
                    alpha="255">
                    <Image resource="numeral_08" />
                    <Variant mode="AMBIENT" target="alpha" value="120" />
                </PartImage>
                <PartImage name="numeral_10"
                    x="48" y="117" width="60" height="45"
                    pivotX="0.5" pivotY="0.5"
                    angle="300"
                    tintColor="#d3d3d3"
                    alpha="255">
                    <Image resource="numeral_10" />
                    <Variant mode="AMBIENT" target="alpha" value="120" />
                </PartImage>
                <PartImage name="numeral_12"
                    x="175" y="30" width="95" height="50"
                    tintColor="#d3d3d3"
                    alpha="255">
                    <Image resource="numeral_12" />
                    <Variant mode="AMBIENT" target="alpha" value="120" />
                </PartImage>
            </Group>
            <PartImage name="index_minute"
                x="0" y="0" width="450" height="450"
                alpha="170" tintColor="#dddddd">
                <Image resource="index_small" />
                <Variant mode="AMBIENT" target="alpha" value="0" />
            </PartImage>
            <PartImage name="index_hour_odd"
                x="0" y="0" width="450" height="450"
                alpha="170" tintColor="#dddddd">
                <Variant mode="AMBIENT" target="alpha" value="0" />
                <Image resource="index_large" />
            </PartImage>
            <PartImage name="index_hour_even"
                x="0" y="0" width="450" height="450"
                alpha="170" tintColor="#dddddd">
                <Image resource="index_medium" />
                <Variant mode="AMBIENT" target="alpha" value="0" />
            </PartImage>
        </Group>

        <!--
            Complication slot overlays for numeral indexes 2, 4, 8 and 10
        -->
        <!-- Index 2 -->
        <ComplicationSlot
            x="332" y="91"
            width="90" height="90"
            slotId="2"
            name="shortcut_2" displayName="2"
            supportedTypes="LONG_TEXT EMPTY">
            <DefaultProviderPolicy
                defaultSystemProvider="APP_SHORTCUT"
                defaultSystemProviderType="LONG_TEXT"
                />
            <BoundingOval x="0" y="0" width="90" height="90" outlinePadding="2" />
        </ComplicationSlot>
        <!-- Index 4 -->
        <ComplicationSlot
            x="332" y="265"
            width="90" height="90"
            slotId="4"
            name="shortcut_4" displayName="4"
            supportedTypes="LONG_TEXT EMPTY">
            <DefaultProviderPolicy
                defaultSystemProvider="APP_SHORTCUT"
                defaultSystemProviderType="LONG_TEXT"
                />
            <BoundingOval x="0" y="0" width="90" height="90" outlinePadding="2" />
        </ComplicationSlot>
        <!-- Index 8 -->
        <ComplicationSlot
            x="27" y="265"
            width="90" height="90"
            slotId="4"
            name="shortcut_8" displayName="8"
            supportedTypes="LONG_TEXT EMPTY">
            <DefaultProviderPolicy
                defaultSystemProvider="APP_SHORTCUT"
                defaultSystemProviderType="LONG_TEXT"
                />
            <BoundingOval x="0" y="0" width="90" height="90" outlinePadding="2" />
        </ComplicationSlot>
        <!-- Index 10 -->
        <ComplicationSlot
            x="27" y="91"
            width="90" height="90"
            slotId="10"
            name="shortcut_10" displayName="10"
            supportedTypes="LONG_TEXT EMPTY">
            <DefaultProviderPolicy
                defaultSystemProvider="APP_SHORTCUT"
                defaultSystemProviderType="LONG_TEXT"
                />
            <BoundingOval x="0" y="0" width="90" height="90" outlinePadding="2" />
        </ComplicationSlot>

        <!--
            The top digital display slot can be configured by the user to show:
            0) Nothing
            1) Short Time
            2) AM/PM Time
            3) Military Time
            4) 24 Hr Time
            5) Step Count
            6) Heart Rate
            7) Notification Count
            8) Date

            Launch actions are determined by the display:
            - Time settings = alarm
            - Heart rate = default heart rate monitoring app
            - Date = calendar
            - Step count / notification = none
        -->
        <Group id="digital_display" name="top_complication"
            x="140" y="90"
            width="170" height="70">

            <!-- OUTLINE
            <PartDraw x="0" y="0" width="170" height="70">
                <Rectangle x="0" y="0" width="170" height="70">
                    <Fill color="#dddddd" />
                </Rectangle>
                <Rectangle x="80" y="0" width="10" height="70">
                    <Fill color="#777777" />
                </Rectangle>
            </PartDraw>
            -->
            <!-- END OUTLINE -->
            <UserConfiguration>
                <ListConfiguration id="user_config" />
            </UserConfiguration>
            <!--
                Default / Option 0  = no digital display
            -->

            <!--
                Option 1 = Short Time
            -->
            <ListConfiguration id="user_config">
                <ListOption id="1">
            <PartText x="-952" y="3" width="1122" height="70">
                <Launch target="ALARM" />
                <Variant mode="AMBIENT" target="alpha" value="0" />
                <Text align="CENTER" ellipsis="TRUE">
                    <Font family="digital_numbers" size="43"
                        color="#d3d3d3"
                        alpha="255">
                        <Template>
                            %s
                            <Parameter expression="colon" />
                        </Template>
                    </Font>
                </Text>
            </PartText>
            <PartText x="-943" y="0" width="1020" height="70">
                <Variant mode="AMBIENT" target="alpha" value="0" />
                <Text align="END" ellipsis="TRUE">
                    <Font family="digital_numbers" size="43"
                        color="#d3d3d3"
                        alpha="255">
                        <Template>
                            %s
                            <Parameter expression="[HOUR_1_12]" />
                        </Template>
                    </Font>
                </Text>
            </PartText>
            <PartText x="-961" y="0" width="1122" height="70">
                <Variant mode="AMBIENT" target="alpha" value="0" />
                <Text align="END" ellipsis="TRUE">
                    <Font family="digital_numbers" size="43"
                        color="#d3d3d3"
                        alpha="255">
                        <Template>
                            %s
                            <Parameter expression="[MINUTE_Z]" />
                        </Template>
                    </Font>
                </Text>
            </PartText>
                </ListOption>
            </ListConfiguration>

            <!--
                Option 2 = AM/PM Time
            -->
            <ListConfiguration id="user_config">
                <ListOption id="2">
            <PartText x="-982" y="3" width="1122" height="70">
                <Launch target="ALARM" />
                <Variant mode="AMBIENT" target="alpha" value="0" />
                <Text align="CENTER" ellipsis="TRUE">
                    <Font family="digital_numbers" size="43"
                        color="#d3d3d3"
                        alpha="255">
                        <Template>
                            %s
                            <Parameter expression="colon" />
                        </Template>
                    </Font>
                </Text>
            </PartText>
            <PartText x="-970" y="0" width="1020" height="70">
                <Variant mode="AMBIENT" target="alpha" value="0" />
                <Text align="END" ellipsis="TRUE">
                    <Font family="digital_numbers" size="43"
                        color="#d3d3d3"
                        alpha="255">
                        <Template>
                            %s
                            <Parameter expression="[HOUR_1_12]" />
                        </Template>
                    </Font>
                </Text>
            </PartText>
            <PartText x="-994" y="0" width="1122" height="70">
                <Variant mode="AMBIENT" target="alpha" value="0" />
                <Text align="END" ellipsis="TRUE">
                    <Font family="digital_numbers" size="43"
                        color="#d3d3d3"
                        alpha="255">
                        <Template>
                            %s
                            <Parameter expression="[MINUTE_Z]" />
                        </Template>
                    </Font>
                </Text>
            </PartText>
            <Condition>
                <Expressions>
                    <Expression name="is_pm">
                        [AMPM_STATE] == 1
                    </Expression>
                </Expressions>
                <Compare expression="is_pm">
            <PartText x="-955" y="10" width="1122" height="70">
                <Variant mode="AMBIENT" target="alpha" value="0" />
                <Text align="END" ellipsis="TRUE">
                    <Font family="digital_numbers" size="25"
                        color="#d3d3d3"
                        alpha="255">
                        <Template>
                            %s
                            <Parameter expression="PM" />
                        </Template>
                    </Font>
                </Text>
            </PartText>
                </Compare>
            <PartText x="-955" y="10" width="1122" height="70">
                <Variant mode="AMBIENT" target="alpha" value="0" />
                <Text align="END" ellipsis="TRUE">
                    <Font family="digital_numbers" size="25"
                        color="#d3d3d3"
                        alpha="255">
                        <Template>
                            %s
                            <Parameter expression="AM" />
                        </Template>
                    </Font>
                </Text>
            </PartText>
            </Condition>
                </ListOption>
            </ListConfiguration>

            <!--
                Option 3 = Military Time
            -->
            <ListConfiguration id="user_config">
                <ListOption id="3">
            <PartText x="-952" y="0" width="1122" height="70">
                <Launch target="ALARM" />
                <Variant mode="AMBIENT" target="alpha" value="0" />
                <Text align="CENTER" ellipsis="TRUE">
                    <Font family="digital_numbers" size="43"
                        color="#d3d3d3"
                        alpha="255">
                        <Template>
                            %s%s
                            <Parameter expression="[HOUR_0_23_Z]" />
                            <Parameter expression="[MINUTE_Z]" />
                        </Template>
                    </Font>
                </Text>
            </PartText>
                </ListOption>
            </ListConfiguration>

            <!--
                Option 4 = 24hr Time
            -->
            <ListConfiguration id="user_config">
                <ListOption id="4">
            <PartText x="-952" y="3" width="1122" height="70">
                <Launch target="ALARM" />
                <Variant mode="AMBIENT" target="alpha" value="0" />
                <Text align="CENTER" ellipsis="TRUE">
                    <Font family="digital_numbers" size="43"
                        color="#d3d3d3"
                        alpha="255">
                        <Template>
                            %s
                            <Parameter expression="colon" />
                        </Template>
                    </Font>
                </Text>
            </PartText>
            <PartText x="-943" y="0" width="1020" height="70">
                <Variant mode="AMBIENT" target="alpha" value="0" />
                <Text align="END" ellipsis="TRUE">
                    <Font family="digital_numbers" size="43"
                        color="#d3d3d3"
                        alpha="255">
                        <Template>
                            %s
                            <Parameter expression="[HOUR_1_12_Z]" />
                        </Template>
                    </Font>
                </Text>
            </PartText>
            <PartText x="-961" y="0" width="1122" height="70">
                <Variant mode="AMBIENT" target="alpha" value="0" />
                <Text align="END" ellipsis="TRUE">
                    <Font family="digital_numbers" size="43"
                        color="#d3d3d3"
                        alpha="255">
                        <Template>
                            %s
                            <Parameter expression="[MINUTE_Z]" />
                        </Template>
                    </Font>
                </Text>
            </PartText>
                </ListOption>
            </ListConfiguration>

            <!--
                Option 5 = step count
            -->
            <ListConfiguration id="user_config">
                <ListOption id="5">
            <PartText x="-952" y="0" width="1122" height="70">
                <Variant mode="AMBIENT" target="alpha" value="0" />
                <Text align="CENTER" ellipsis="TRUE">
                    <Font family="digital_numbers" size="43"
                        color="#d3d3d3"
                        alpha="255">
                        <Template>
                            %s
                            <Parameter expression="[STEP_COUNT]" />
                        </Template>
                    </Font>
                </Text>
            </PartText>
                </ListOption>
            </ListConfiguration>

            <!--
                Option 6 = Heart Rate
            -->
            <ListConfiguration id="user_config">
                <ListOption id="6">
            <PartText x="-952" y="0" width="1122" height="70">
                <Launch target="HEALTH_HEART_RATE" />
                <Variant mode="AMBIENT" target="alpha" value="0" />
                <Text align="CENTER" ellipsis="TRUE">
                    <Font family="digital_numbers" size="43"
                        color="#d3d3d3"
                        alpha="255">
                        <Template>
                            %s
                            <Parameter expression="[HEART_RATE]" />
                        </Template>
                    </Font>
                </Text>
            </PartText>
                </ListOption>
            </ListConfiguration>

            <!--
                Option 7 = Notification count
            -->
            <ListConfiguration id="user_config">
                <ListOption id="7">
            <Condition>
                <Expressions>
                    <Expression name="not_count">
                        [UNREAD_NOTIFICATION_COUNT] != 0
                    </Expression>
                </Expressions>
            <Compare expression="not_count">
            <PartText x="-952" y="0" width="1122" height="70">
                <Variant mode="AMBIENT" target="alpha" value="0" />
                <Text align="CENTER" ellipsis="TRUE">
                    <Font family="digital_numbers" size="43"
                        color="#d3d3d3"
                        alpha="255">
                        <Template>
                            %s
                            <Parameter expression="[UNREAD_NOTIFICATION_COUNT]" />
                        </Template>
                    </Font>
                </Text>
            </PartText>
            </Compare>
            </Condition>
                </ListOption>
            </ListConfiguration>

            <!--
                Option 8 = Date
            -->
            <ListConfiguration id="user_config">
                <ListOption id="8">
            <PartText x="-957" y="0" width="1122" height="70">
                <Launch target="CALENDAR" />
                <Variant mode="AMBIENT" target="alpha" value="0" />
                <Text align="START" ellipsis="TRUE">
                    <Font family="digital_numbers" size="43"
                        color="#d3d3d3"
                        alpha="255">
                        <Template>
                            %s
                            <Parameter expression="subText([DAY_OF_WEEK_F], 0, 3)" />
                        </Template>
                    </Font>
                </Text>
            </PartText>
            <PartText x="-947" y="0" width="1122" height="70">
                <Variant mode="AMBIENT" target="alpha" value="0" />
                <Text align="END" ellipsis="TRUE">
                    <Font family="digital_numbers" size="43"
                        color="#d3d3d3"
                        alpha="255">
                        <Template>
                            %s
                            <Parameter expression="[DAY_Z]" />
                        </Template>
                    </Font>
                </Text>
            </PartText>
                </ListOption>
            </ListConfiguration>

        </Group>



        <!--
            The left complication slot is for ranged values such as step count, battery level,
            heart rate, etc. The default provider is step count. It can optionally be left empty.
        -->
        <ComplicationSlot
            x="84" y="183"
            width="84" height="84"
            slotId="9"
            name="left_complication" displayName="Left"
            supportedTypes="RANGED_VALUE EMPTY">
            <DefaultProviderPolicy
                defaultSystemProvider="STEP_COUNT"
                defaultSystemProviderType="RANGED_VALUE"
                />
            <BoundingOval x="-10" y="-10" width="104" height="104" outlinePadding="2" />
            <Complication type="RANGED_VALUE">
                <Group name="complication_text" x="0" y="0" width="84" height="84" alpha="255">
                    <Variant mode="AMBIENT" target="alpha" value="0" />
                <PartText x="-148" y="-33" width="240" height="112" scaleX="1.5" scaleY="1.5">
                    <Transform target="y" value="([BATTERY_PERCENT] >= 75) ? 0 : (([BATTERY_PERCENT] > 25) ? -33 : 0)" />
                    <Text align="CENTER" ellipsis="FALSE">
                        <Font family="font" size="12"
                            color="#ffffff"
                            alpha="255">
                            <Template>
                                %d%s
                                <Parameter expression="[BATTERY_PERCENT]" />
                                <Parameter expression="percent" />
                            </Template>
                        </Font>
                    </Text>
                </PartText>
                    <PartDraw x="0" y="0" width="84" height="84">
                    <Arc direction="CLOCKWISE" startAngle="18" endAngle="360" centerX="42" centerY="42" width="84" height="84">
                        <!--
                            Value of transformation equation, line-by-line:
                            1) Round the value to the nearest integer
                            2) Clamp the value between the min and max values
                            3) Subtract the minimum value (in case it is less than 0)
                            4) Convert the value to a percentage.
                            5) Multiply the percentage by 36.
                            6) Add 18 to the result, due to 18 degree start angle
                        -->
                        <Transform target="endAngle"
                            value="(round(
                            ((clamp([COMPLICATION.RANGED_VALUE_VALUE], [COMPLICATION.RANGED_VALUE_MIN], [COMPLICATION.RANGED_VALUE_MAX])
                            - [COMPLICATION.RANGED_VALUE_MIN])
                            / ([COMPLICATION.RANGED_VALUE_MAX] - [COMPLICATION.RANGED_VALUE_MIN]) )
                            * 10)
                            *36
                            +18
                            )" />
                        <Stroke color="#77ffffff" cap="BUTT" thickness="10" />
                    </Arc>
                    </PartDraw>
                </Group>
            </Complication>
        </ComplicationSlot>

        <!--
            The bottom complication slot is used for step count, with the rotating hand
            indicating the number of steps x100, the bezel color indicating the number of
            steps x1,000 and the highlighted number indicating the number of steps x10,000.
            The user can optionally use a complication in order to launch an app of their
            choosing.
        -->
        <ComplicationSlot
            x="168" y="245"
            width="112" height="112"
            slotId="6"
            name="bottom_complication" displayName="Bottom"
            supportedTypes="LONG_TEXT EMPTY">
            <DefaultProviderPolicy
                defaultSystemProvider="APP_SHORTCUT"
                defaultSystemProviderType="LONG_TEXT"
                />
            <BoundingOval x="-6" y="-6" width="126" height="126" outlinePadding="2" />
            <Complication type="LONG_TEXT">
                <Group name="complication_shortcut" x="0" y="0" width="120" height="120">
                    <Variant mode="AMBIENT" target="alpha" value="0" />
                    <PartText x="-170" y="0" width="240" height="112" scaleX="2" scaleY="2">
                        <Text align="CENTER" ellipsis="FALSE">
                            <Font family="font" size="12" />
                        </Text>
                    </PartText>
                </Group>
            </Complication>
        </ComplicationSlot>


        <!--
            The right complication slot is for short text descriptors. The default provider is
            date. It can optionally be left empty.
        -->
        <ComplicationSlot
            x="280" y="200"
            width="120" height="50"
            slotId="3"
            name="right_complication" displayName="Right"
            supportedTypes="SHORT_TEXT EMPTY">
            <DefaultProviderPolicy
                defaultSystemProvider="DATE"
                defaultSystemProviderType="SHORT_TEXT"
                />
            <BoundingBox x="0" y="0" width="120" height="50" outlinePadding="2" />
            <Complication type="SHORT_TEXT">
                <Group name="right_complication_background"
                    x="0" y="0" width="120" height="50">
                    <Variant mode="AMBIENT" target="alpha" value="0" />
                    <PartDraw x="0" y="0" width="120" height="50">
                        <Rectangle x="0" y="0" width="120" height="50">
                            <Fill color="#dddddd">
                                <LinearGradient startX="0" startY="50" endX="10" endY="0"
                                    colors="#dddddd #aaaaaa" positions="0 1" />
                            </Fill>
                        </Rectangle>
                    </PartDraw>
                    <PartDraw x="0" y="0" width="120" height="50">
                        <Rectangle x="0" y="0" width="120" height="50">
                            <Stroke color="#000000" thickness="3" />
                        </Rectangle>
                    </PartDraw>
                </Group>
                <Group name="test_long_text" x="0" y="0" width="120" height="50">
                    <Variant mode="AMBIENT" target="alpha" value="0" />
                    <PartText x="-132" y="-1" width="200" height="50" scaleX="1.65" scaleY="3">
                        <Text align="CENTER" ellipsis="TRUE">
                            <Font family="orbitron" size="12"
                                color="#000000"
                                alpha="255"/>
                            <Template>
                            %s
                            <Parameter expression="[COMPLICATION.TEXT]" />
                            </Template>
                        </Text>
                    </PartText>
                </Group>
            </Complication>
        </ComplicationSlot>


        <!--
            The bottom complication analog component with single hand and bezel indicator, to
            be duplicated into left complication with bezel then becoming multiples of 10.
        -->
        <Group name="bottom_complication_analog" x="168" y="245"
            width="112" height="112">
            <Variant mode="AMBIENT" target="alpha" value="0" />
            <PartDraw x="0" y="0" width="112" height="112">
                <Arc centerX="56" centerY="56" width="112" height="112"
                    startAngle="18" endAngle="18">
                    <Transform target="endAngle" value="floor(([STEP_COUNT]%10000)/1000)*36 + 18" />
                    <Stroke color="#ff777777" cap="BUTT" thickness="14" />
                </Arc>
            </PartDraw>
            <PartImage name="step_hand"
                x="50" y="-56" width="12" height="224"
                pivotX=".5" pivotY=".5"
                angle="0">
                <Transform target="angle" value="[STEP_COUNT]*36/100" />
                <Image resource="@drawable/hand_hour" />
            </PartImage>
            <Group name="step_numeric_indices"
                x="0" y="0"
                width="112" height="112"
                tintColor="#eeeeee">
                <Group name="step_index_no_rotation"
                    x="0" y="0"
                    width="112" height="112"
                    pivotX=".5" pivotY="0.5"
                    angle="0">
            <PartText name="step_index_10"
                x="-56" y="-57"
                width="112" height="112"
                scaleX="1.5" scaleY="1.5"
                pivotX=".5" pivotY="0.5"
                angle="0">
                <Variant mode="AMBIENT" target="alpha" value="0" />
                <Text align="CENTER" ellipsis="FALSE">
                    <Font family="font" weight="EXTRA_BOLD" size="12" color="#ffffff" alpha="255">
                        10
                    </Font>
                </Text>
            </PartText>
            <PartText name="step_index_5"
                x="-44" y="55"
