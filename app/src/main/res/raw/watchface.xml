<WatchFace width="450" height="450" shape="CIRCLE">
    <Scene backgroundColor="#ff000000">
        <Group name="background"
            x="0" y="0" width="450" height="450">
            <PartImage name="background_image"
                x="0" y="0" width="450" height="450"
                tintColor="#c9c9c9"
                alpha="255">
                <Image resource="background" />
                <Variant mode="AMBIENT" target="alpha" value="0" />
            </PartImage>
        </Group>
        <Group name="index"
            x="0" y="0" width="450" height="450">
            <PartImage name="index_numerals"
                x="30" y="30" width="390" height="390"
                alpha="230" tintColor="#eeeeee">
                <Image resource="numerals" />
                <Variant mode="AMBIENT" target="alpha" value="90" />
            </PartImage>
            <PartImage name="index_minute"
                x="0" y="0" width="450" height="450"
                alpha="170" tintColor="#dddddd">
                <Image resource="index_small" />
                <Variant mode="AMBIENT" target="alpha" value="0" />
            </PartImage>
            <PartImage name="index_hour_odd"
                x="0" y="0" width="450" height="450"
                alpha="170" tintColor="#dddddd">
                <Variant mode="AMBIENT" target="alpha" value="0" />
                <Image resource="index_large" />
            </PartImage>
            <PartImage name="index_hour_even"
                x="0" y="0" width="450" height="450"
                alpha="170" tintColor="#dddddd">
                <Image resource="index_medium" />
                <Variant mode="AMBIENT" target="alpha" value="0" />
            </PartImage>
        </Group>
        <AnalogClock x="0" y="0" width="450" height="450">
            <HourHand name="hand_hour_active"
                x="211" y="0" width="28" height="450" pivotX="0.5" pivotY="0.5"
                tintColor="e9e9e9"
                resource="@drawable/hand_hour">
                <Variant mode="AMBIENT" target="alpha" value="0"/>
            </HourHand>
            <HourHand name="hand_hour_ambient"
                x="211" y="0" width="28" height="450" pivotX="0.5" pivotY="0.5"
                resource="@drawable/hand_hour"
                tintColor="#999999"
                alpha="0">
                <Variant mode="AMBIENT" target="alpha" value="255"/>
            </HourHand>
            <MinuteHand name="hand_minute_active"
                x="211" y="0" width="28" height="450" pivotX="0.5" pivotY="0.5"
                resource="@drawable/hand_minute"
                tintColor="#e9e9e9"
                alpha="255">
                <Variant mode="AMBIENT" target="alpha" value="0"/>
            </MinuteHand>
            <MinuteHand name="hand_minute_ambient"
                x="211" y="0" width="28" height="450" pivotX="0.5" pivotY="0.5"
                resource="@drawable/hand_minute"
                tintColor="#999999"
                alpha="0">
                <Variant mode="AMBIENT" target="alpha" value="255"/>
            </MinuteHand>
            <SecondHand name="hand_second"
                x="217" y="0" width="16" height="450" pivotX="0.5" pivotY="0.5"
                resource="@drawable/hand_second"
                tintColor="#e9e9e9">
                <Sweep frequency="15" />
                <Variant mode="AMBIENT" target="alpha" value="0" />
            </SecondHand>
        </AnalogClock>
    </Scene>
</WatchFace>
